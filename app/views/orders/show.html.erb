<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>

    <table class="table table-bordered">
    <thead>
        <tr>
          <th colspan="2">Product</th>
          <th class="text-end" nowrap>Unit Price</th>
          <th class="text-end" nowrap>Quantity</th>
          <th class="text-end" nowrap>Price</th>
        </tr>
      </thead>
      <tbody>
    
      <% @order.line_items.each do |item| %>
        <%= render 'line_item', product: item.product, quantity: item[:quantity].to_i %>
      <% end %>

    <tfoot>
        <tr>
          <th colspan="4" class="text-end">
            TOTAL:&nbsp;
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
        </tr>
      </tfoot>
    </table>
  </div>
  <p class="text-end">An order confirmation email has been sent to: <%= @order.email %></p>
  <div class="text-end"><%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %></div>

</section>
